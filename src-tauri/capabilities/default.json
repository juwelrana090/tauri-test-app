{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "build": {
    "signing": {
      "identity": {
        "publicKey": "../public_key.pem"
      }
    }
  },
  "permissions": [
    "core:default",
    "store:default",
    "core:path:default",
    {
      "identifier": "core:path:default",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOCUMENTS/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        {
          "path": "$DOWNLOAD/**"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "exec-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "exec-bash",
          "cmd": "bash",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    "shell:allow-open",
    "shell:default",
    "updater:default",
    "updater:allow-check",
    "updater:allow-download",
    "updater:allow-install",
    "updater:allow-download-and-install"
  ]
}
